# Database Configuration
POSTGRES_USER=admin
POSTGRES_PASSWORD=change-this-password
POSTGRES_DB=n8n
POSTGRES_NON_ROOT_USER=n8n_user
POSTGRES_NON_ROOT_PASSWORD=change-this-password

# n8n Core Configuration
N8N_PROTOCOL=https
N8N_HOST=sua-url-ngrok.ngrok-free.app
N8N_PORT=5678
N8N_LISTEN_ADDRESS=0.0.0.0

# Webhook Configuration (Required for ngrok integration)
# Esta é a variável mais importante para usar com ngrok
# Substitua pela sua URL do ngrok (ex: https://abc123.ngrok-free.app/)
WEBHOOK_URL=https://sua-url-ngrok.ngrok-free.app/
N8N_EDITOR_BASE_URL=https://sua-url-ngrok.ngrok-free.app

# Webhook specific settings
N8N_PATH=/
N8N_PUSH_BACKEND=websocket
